<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_shouye"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/shouye_show"
            android:textColor="@drawable/textclor"
            android:text="首页"

            />

        <RadioButton
            android:id="@+id/rb_tupian"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/tupian_show"
            android:textColor="@drawable/textclor"
            android:text="图片"/>

        <RadioButton
            android:id="@+id/rb_shipin"
            style="@style/radiobutton_style"
            android:drawableTop="@drawable/shipin_show"
            android:textColor="@drawable/textclor"
            android:text="视频"/>

        <RadioButton
            android:id="@+id/rb_duanzi"
            android:drawableTop="@drawable/duanzi_show"
            style="@style/radiobutton_style"
            android:textColor="@drawable/textclor"
            android:text="段子"/>

    </RadioGroup>
    <FrameLayout
        android:layout_above="@id/radio_group"
        android:id="@+id/frament"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    <View
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/textshow"
        android:layout_below="@id/frament"
        />

</RelativeLayout>
